{
  "compilerOptions": {
    "allowSyntheticDefaultImports": true,
    "declaration": false,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "downlevelIteration": true,
    "resolveJsonModule": true,
    "lib": ["es2020", "dom"],
    "module": "es2020",
    "moduleResolution": "node",
    "sourceMap": true,
    "target": "es5",
    "typeRoots": ["node_modules/@types", "app/ui/graphql"],
    "jsx": "react",
    "baseUrl": "./app/ui",
    "paths": {
      "components/*": ["components/*"],
      "config/*": ["config/*"],
      "foundations/*": ["foundations/*"],
      "sections/*": ["sections/*"],
      "utilities/*": ["utilities/*"]
    },
    "strict": true
  },
  "exclude": ["**/*.spec.ts", "node_modules", "vendor", "public"],
  "include": ["app/ui/**/*"],
  "compileOnSave": false
}
